{% if result[player]['error'] == 0 %}
{% set status = result['winner'] == player ? "wins ✅" : "lost ❌" %}
<li>{{ player|capitalize }} signatures '{{result[player]['signatures']}}' have {{result[player]['points']}} points and {{status}}.</li>
{% else %}
<li>{{ player|capitalize }} signatures '{{result[player]['signatures']}}' is invalid ⚠️.</li>
{% endif %}