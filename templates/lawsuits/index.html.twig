{% extends 'base.html.twig' %}

{% block title %}Lawsuits!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>
{{ dump(result) }}
<div class="example-wrapper">
    <h1>Welcome to Lawsuits! ⚖️</h1>

    <b>This is the result:</b>
    <ul>
        {{ include('lawsuits/result_details.html.twig', { player: 'plaintiff' }) }}
        {{ include('lawsuits/result_details.html.twig', { player: 'defendant' }) }}
    </ul>

    {% if (result['plaintiff']['joker'] == true) or (result['defendant']['joker'] == true) %}
        <b>Joker analysis:</b>
        <ul>
            {{ include('lawsuits/joker_details.html.twig', { player: 'plaintiff' }) }}
            {{ include('lawsuits/joker_details.html.twig', { player: 'defendant' }) }}
        {#
        {% if result['plaintiff']['joker'] == true %}
            {% if result['plaintiff']['joker_analysis']['found']  == true %}
                {% if result['plaintiff']['winner'] <= 0 %}
                    Plaintiff need at least a '{{ result['plaintiff']['joker_analysis']['name'] }}' signature to win, if they get it the new signatures will be '{{ result['plaintiff']['joker_analysis']['new_signature'] }}' and they will get {{ result['plaintiff']['joker_analysis']['new_points'] }} point in total.
                {% else %}
                    Plaintiff won but can get {{ result['plaintiff']['joker_analysis']['new_points'] }} point in total with a '{{ result['plaintiff']['joker_analysis']['name'] }}' signature and they new signatures will be '{{ result['plaintiff']['joker_analysis']['new_signature'] }}'.
                {% endif %}                
            {% else %}
                Plaintiff can´t win.
            {% endif %}
        {% endif %}
        #}
        </ul>
    {% endif %}




</div>
{% endblock %}