{% extends 'base.html.twig' %}

{% block title %}Lawsuits!{% endblock %}

{% block body %}
<style>
    .example-wrapper {
        margin: 1em auto;
        max-width: 800px;
        width: 95%;
        font: 18px/1.5 sans-serif;
    }

    .example-wrapper code {
        background: #F5F5F5;
        padding: 2px 6px;
    }
</style>
{# dump(result) #}
<div class="example-wrapper">
    <h1>Welcome to Lawsuits! ⚖️</h1>

    <b class='title'>This is the result:</b>
    <ul>
        {{ include('lawsuits/result_details.html.twig', { player: 'plaintiff' }) }}
        {{ include('lawsuits/result_details.html.twig', { player: 'defendant' }) }}
    </ul>

    {% if (result['plaintiff']['joker'] == true) or (result['defendant']['joker'] == true) %}
        <b class='title'>Joker analysis:</b>
        <ul>
            {{ include('lawsuits/joker_details.html.twig', { player: 'plaintiff' }) }}
            {{ include('lawsuits/joker_details.html.twig', { player: 'defendant' }) }}
        </ul>
    {% endif %}

</div>
{% endblock %}